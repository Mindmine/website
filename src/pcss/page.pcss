html, body {
    padding: 0;
    margin: 0;
    background:
        url('./img/grid.svg') 0 0 / 1024px 1024px repeat,
        radial-gradient(ellipse at 100% 100%, #114470 0%, #0b2441 100%);
    min-height: 100vh;

    .cog {
        position: absolute;
        max-width: 460px;
        width: 100%;
        height: 100%;
        pointer-events: none;
        background: url('./img/bigcog.svg') 0 0 / 100% auto no-repeat;
    }
}
